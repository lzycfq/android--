<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tvnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书编号" />
                <AutoCompleteTextView
                    android:id="@+id/actnumber"
                    android:completionThreshold="1"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content" >
                </AutoCompleteTextView>
                <Button 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫描"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书名称" />
                <EditText
                    android:id="@+id/edname"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者" />
                <EditText
                    android:id="@+id/edauthor"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出版社" />
                <EditText
                    android:id="@+id/edpress"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出版时间" />
                <EditText
                    android:id="@+id/edtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书价格" />
                <EditText
                    android:id="@+id/edprice"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书分类1"/>
                <Spinner 
                    android:id="@+id/spfenlei1"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
            </LinearLayout>

                        <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书分类2"/>
                <Spinner 
                    android:id="@+id/spfenlei2"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
            </LinearLayout>
            
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="图书图片"/>
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书介绍"/>
                <EditText
                    android:id="@+id/edjieshao"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:ems="10" >

                </EditText>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书评价"/>
                <RatingBar 
                    android:numStars="4"
                    android:id="@+id/ratpinjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

              <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书推荐"/>
                <CheckBox
                    android:id="@+id/cbjingdian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经典"></CheckBox>
                <CheckBox
                    android:id="@+id/cbrexiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热销"></CheckBox>
                <CheckBox
                    android:id="@+id/cbzhiding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="置顶"></CheckBox>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否上架"/>
                <RadioGroup 
                    android:id="@+id/rd"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RadioButton 
                        android:id="@+id/rbyes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="是"/>
                    <RadioButton 
                        android:id="@+id/rbno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="否"/>
                </RadioGroup>
                <ToggleButton 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tb"
                    android:checked="true"
                    android:textOn="是"
                    android:textOff="否"/>
            </LinearLayout> 

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button 
                    android:id="@+id/btbaocun"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="保存图书"/>
                <Button 
                    android:id="@+id/btqingkong"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="清空"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>